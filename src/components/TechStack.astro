---
import { Icon } from "astro-icon/components";
const technologies = [
  { name: "HTML", icon: "skill-icons:html" },
  { name: "CSS", icon: "skill-icons:css" },
  { name: "JavaScript", icon: "skill-icons:javascript" },
  { name: "TailwindCSS", icon: "skill-icons:tailwindcss-dark" },
  { name: "React", icon: "skill-icons:react-dark" },
  { name: "RN", icon: "skill-icons:react-light" },
  { name: "Expo", icon: "simple-icons:expo" },
  { name: "Node.js", icon: "skill-icons:nodejs-dark" },
  { name: "Express", icon: "skill-icons:expressjs-dark" },
  { name: "MongoDB", icon: "skill-icons:mongodb" },
  { name: "SQL", icon: "mdi:sql-query" },
  { name: "Git", icon: "skill-icons:git" },
  { name: "WordPress", icon: "skill-icons:wordpress" },
  { name: "Shopify", icon: "logos:shopify" },
];
---

<section
  class="max-w-4xl w-full
  mx-auto
  mt-20
  mb-10
  bg-light-bg-alt
  text-light-text
  dark:bg-dark-bg-alt
  dark:text-dark-text
  shadow-lg
  p-4
  rounded-xl"
>
  <h3
    class="font-ibm font-bold text-xl sm:text-2xl md:text-3xl text-light-primary dark:text-dark-primary text-center"
  >
    Tech Stack
  </h3>
  <div class="overflow-hidden flex w-full">
    <ul class="flex gap-10 py-4 animate-infinite-scroll">
      {
        [...technologies, ...technologies].map((tech) => (
          <li class="flex flex-col items-center gap-2">
            <span class="hover:underline">{tech.name}</span>
            <Icon name={tech.icon} font-size={40} />
          </li>
        ))
      }
    </ul>
  </div>
</section>
