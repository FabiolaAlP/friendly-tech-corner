---
interface Props {
  currentPage: number;
  totalPages: number;
}

const { currentPage, totalPages } = Astro.props;
---

<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class:list={["page-item", currentPage === 1 && "disabled"]}>
      <a
        href={currentPage > 1 ? `/posts/${currentPage - 1}` : "#"}
        class="page-link">Previous</a
      >
    </li>
    {
      Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
        <li class:list={["page-item", currentPage === page && "active"]}>
          <a href={`/posts/${page}`} class="page-link">
            {page}
          </a>
        </li>
      ))
    }
    <li class:list={["page-item", currentPage === totalPages && "disabled"]}>
      <a
        href={currentPage < totalPages ? `/posts/${currentPage + 1}` : "#"}
        class="page-link">Next</a
      >
    </li>
  </ul>
</nav>
