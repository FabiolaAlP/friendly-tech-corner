---
import { Icon } from "astro-icon/components";
const projects = [
  {
    name: "URL-Shortener",
    link: "https://url-shortener-app-y5c2.onrender.com/",
    code: "https://github.com/FabiolaAlP/url-shortener-app",
  },
  {
    name: "Chat App",
    link: "",
    code: "https://github.com/FabiolaAlP/chat-app-firebase-demo",
  },
  {
    name: "Translator",
    link: "",
    code: "https://github.com/FabiolaAlP/demo-translator",
  },
  {
    name: "Tech Blog: Friendly Tech Corner",
    link: "https://friendlytechcorner.netlify.app",
    code: "https://github.com/FabiolaAlP/friendly-tech-corner",
  },
  {
    name: "Static Website: Bits of Cloud",
    link: "https://bitsofcloud.netlify.app",
    code: "https://github.com/FabiolaAlP/bitsofcloud",
  },
];
---

<section
  class="max-w-4xl w-full
  mx-auto
  my-10
  bg-light-bg-alt
  text-light-text
  dark:bg-dark-bg-alt
  dark:text-dark-text
  shadow-lg
  p-4
  rounded-xl"
>
  <h3
    class="font-ibm font-bold text-xl sm:text-2xl md:text-3xl text-light-primary dark:text-dark-primary text-center text-balance"
  >
    Projects
  </h3>
  <div class="flex">
    <ul>
      {
        projects.map((project) => (
          <li class="flex flex-col  gap-2 sm:gap-6">
            <h4 class="font-ibm font-bold text-lg sm:text-xl text-light-primary dark:text-dark-primary text-balance">
              {project.name}
            </h4>
            <div class="flex gap-4 mt-2 sm:mt-0">
              <a
                class={project.link ? "visible" : "hidden"}
                href={project.link}
                target="_blank"
              >
                <Icon
                  name="solar:link-circle-bold"
                  class="w-12 h-12 text-light-primary dark:text-dark-primary hover:scale-125"
                />
              </a>
              <a href={project.code} target="_blank">
                <Icon
                  name="solar:code-square-bold"
                  class="w-12 h-12 text-light-primary dark:text-dark-primary hover:scale-125"
                />
              </a>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>
